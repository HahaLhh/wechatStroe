page {
  height: 100%;
}
.store_category {
  height: 100%;
}
.store_category .cates_container {
  margin: 15rpx;
  height: calc(100vh - 90rpx);
  display: flex;
}
.store_category .cates_container .left_srollview {
  flex: 3;
  background-color: #f5f5f5;
}
.store_category .cates_container .left_srollview .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid lightgray;
  font-size: 30rpx;
}
.store_category .cates_container .left_srollview .active {
  color: var(--themeColor);
  border-left: 5rpx solid red;
}
.store_category .cates_container .right_scrollview {
  flex: 5;
}
.store_category .cates_container .right_scrollview .goods_gruop .goods_title {
  height: 88rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.store_category .cates_container .right_scrollview .goods_gruop .goods_title .delimiter {
  color: #ccc;
  padding: 0 20rpx;
}
.store_category .cates_container .right_scrollview .goods_gruop .goods_list {
  padding: 30rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.store_category .cates_container .right_scrollview .goods_gruop .goods_list navigator {
  width: 33.33%;
  padding: 10rpx 20rpx;
}
.store_category .cates_container .right_scrollview .goods_gruop .goods_list navigator .goods_name {
  font-size: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
